{
  "name": "SimpleViewer - Image Analysis Tool",
  "short_name": "SimpleViewer",
  "description": "Advanced image viewer with change detection analysis, offline support, and CDN optimization",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#667eea",
  "orientation": "any",
